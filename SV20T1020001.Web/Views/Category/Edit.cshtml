@model SV20T1020001.DomainModels.Category
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" method="post" enctype="multipart/form-data">
            <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
            <!--Luu y doi tuong nhap input phai co name-->
            <div class="form-group">
                <label>Tên loại hàng hoá:</label>
                @* <input type="text" class="form-control" name="CategoryName" value="@Model.CategoryName" autofocus> *@
                @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control", name = nameof(Model.CategoryName), autofocus = "autofocus" })
                @Html.ValidationMessage(nameof(Model.CategoryName), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Mô tả hàng:</label>
                @* <input type="text" class="form-control" name="Description" value="@Model.Description"> *@
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control", name = nameof(Model.CategoryName), autofocus = "autofocus" })
                @Html.ValidationMessage(nameof(Model.Description), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label >Ảnh minh họa:</label>
                <div class="col-sm-12">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12">
                    <input id="PhotoInput" type="hidden" name="Photo" value="@Model.Photo" />
                    <img id="Photo" src="~/images/categories/@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default">
                    Quay lại
                </a>
            </div>
            @Html.ValidationMessage("Error", new { @style = "color:#f00;font-size:25px" })
        </form>
    </div>
</div>