@model SV20T1020001.DomainModels.Shipper
@{
}
<div class="box box-primary">
	<div class="box-body">
		<form action="~/Shipper/Save" method="post">
			<input value="@Model.ShipperID" name="ShipperID" type="hidden"/>
			<!--Luu y doi tuong nhap input phai co name-->
			<div class="form-group">
				<label>Tên người giao hàng:</label>
				@Html.TextBoxFor(m => m.ShipperName, new { @class = "form-control", autoFocus = "autoFocus" })
				@Html.ValidationMessage(nameof(Model.ShipperName), new { @style = "color:#f00" })
			</div>
			<div class="form-group">
				<label>Số điện thoại:</label>
				@Html.TextBoxFor(m=>m.Phone, new {@class = "form-control"})
				@Html.ValidationMessage(nameof(Model.Phone), new {@style = "color:#f00"})
			</div>
			
			
			<div class="form-group text-right">
				<button type="submit" class="btn btn-primary">
					<i class="fa fa-floppy-o"></i>
					Lưu dữ liệu
				</button>
				<a href="~/Shipper" class="btn btn-default">
					Quay lại
				</a>
			</div>
			@Html.ValidationMessage("Error", new { @style = "color:#f00;font-size:25px" })
		</form>
	</div>
</div>