@model SV20T1020001.DomainModels.Shipper
@{
	ViewBag.Title = "Xoá người giao hàng";
}
<div class="box box-danger">
	<div class="box-body">
		<form action="~/Shipper/Delete/@Model.ShipperID" method="post">
			<!--Luu y doi tuong nhap input phai co name-->
			<div class="form-group">
				<label>Tên người giao hàng:</label>
				<p class="form-control-static">@Model.ShipperName</p>
			</div>
			<div class="form-group">
				<label>Số điện thoại:</label>
				<p class="form-control-static">@Model.Phone</p>
			</div>


			<div class="form-group text-right">
				@if (ViewBag.AllowDelete)
				{
					<button type="submit" class="btn btn-danger">
						<i class="fa fa-trash-o"></i>
						Xác nhận xoá
					</button>

				}
				<a href="~/Shipper" class="btn btn-default">
					Quay lại
				</a>
			</div>

		</form>
	</div>
</div>