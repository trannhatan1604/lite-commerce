<!--Khong chi dinh viewbag o day vi edit se dung chung cho 2 chuc nag-->
@model SV20T1020001.DomainModels.Customer
@{
	
}
<div class="box box-primary">
	<div class="box-body">
		<form action="~/Customer/Save" method="post">
			<!--Luu y doi tuong nhap input phai co name-->
			<input type="hidden" name="CustomerID" value="@Model.CustomerId" />
			<div class="form-group">
				<label>Tên khách hàng:</label>
				<!--Phải có thuọc tính name để gửi lên server-->
				@* <input type="text" class="form-control" name="CustomerName" autofocus value="@Model.CustomerName"> *@
				@Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", autoFocus = "autoFocus" })
				@Html.ValidationMessage(nameof(Model.CustomerName),new {@style ="color:#f00"})
			</div>
			<div class="form-group">
				<label>Tên giao dịch:</label>
				@* <input type="text" class="form-control" name="ContactName" value="@Model.ContactName"> *@
				@Html.TextBoxFor(m => m.ContactName, new { @class = "form-control"})
				@Html.ValidationMessage(nameof(Model.ContactName), new { @style = "color:#f00" })
			</div>
			<div class="form-group">
				<label>Điện thoại:</label>
				@Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
			</div>
			<div class="form-group">
				<label>Email:</label>
				@Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type="email" })
				@Html.ValidationMessage(nameof(Model.Email), new { @style = "color:#f00" })
			</div>
			<div class="form-group">
				<label>Địa chỉ:</label>
				@Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
			</div>
			<div class="form-group">
				<label>Tỉnh/ Thành:</label>
				@* <select class="form-control" name="Province">
					<option value="">-- Chọn tỉnh thành --</option>
					@foreach(var item in SV20T1020001.BusinessLayers.CommonDataService.ListOfProvinces())
					{
						if(item.ProvinceName == Model.Province)
						{
							<option value="@item.ProvinceName" selected>@item.ProvinceName</option>
						}
						else
						{
							<option value="@item.ProvinceName">@item.ProvinceName</option>
						}
					}
					
				</select> *@
				@Html.DropDownListFor(m => m.Province, SelectListHelper.Provinces(), new { @class = "form-control select2"})
				@Html.ValidationMessage(nameof(Model.Province), new { @style = "color:#f00" })
				
				
			</div>
			<div class="form-group">
				<label>Trạng thái:</label>
					<!--Khuyến cáo dùng checkbox hoặc radio-->
					@if(Model.IsLocked)
					{
						<p>
						<input type="radio" name="IsLocked" value="true" checked> Tài khoản bị khoá<br>
						<input type="radio" name="IsLocked" value="false"> Tài khoản không bị khoá
						</p>
					}
					else
					{
						<p>
						<input type="radio" name="IsLocked" value="true" > Tài khoản bị khoá<br />
						<input type="radio" name="IsLocked" value="false" checked> Tài khoản không bị khoá
						</p>
					}
			</div>
			<div class="form-group text-right">
				<button type="submit" class="btn btn-primary">
					<i class="fa fa-floppy-o"></i>
					Lưu dữ liệu
				</button>
				<a href="~/Customer" class="btn btn-default">
					Quay lại	
				</a>
			</div>
			@Html.ValidationMessage("Error", new { @style = "color:#f00;font-size:25px" })
		</form>
	</div>
</div>