@model SV20T1020001.DomainModels.Employee
@{

}

<div class="box box-primary">
    <div class="box-body">
        <!-- co enctype="multipart/form-data" de load du lieu-->
        <form class="form-horizontal" method="post" enctype="multipart/form-data" action="~/Employee/Save">
            <input type="hidden" name="@nameof(Model.EmployeeID)" value="@Model.EmployeeID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên:</label>
                <div class="col-sm-10">
                    @* <input type="text" class="form-control" name="FullName" autofocus value="@Model.FullName"/> *@
                    @Html.TextBoxFor(m => m.FullName, new { @class="form-control", autoFocus="autoFocus"})
                    @Html.ValidationMessage(nameof(Model.FullName), new { @style="color: #f00"})
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <input type="hidden" name="BirthDate" value="@Model.BirthDate" />
                    <input type="text" class="form-control date-picker" 
                    name="BirthDateInput" 
                    value="@Model.BirthDate.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("en-GB"))"/>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Address" value="@Model.Address"/>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-10">
                    
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    @Html.ValidationMessage(nameof(Model.Phone), new { @style = "color: #f00" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email" })
                    @Html.ValidationMessage(nameof(Model.Email), new { @style = "color: #f00" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <div class="radio">
                        <label>
                            <input type="radio" name="IsWorking" value="True" @if (Model.IsWorking)
                            {
                                <text>checked</text>
                            } />
                            Nhân viên đang làm việc
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="IsWorking" value="False" @if (!Model.IsWorking)
                            {
                                <text>checked</text>
                            } />
                            Nhân viên không làm việc
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh cá nhân:</label>
                <div class="col-sm-10">
                    <input type="hidden" name="Photo" value="@Model.Photo" />
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="~/images/employees/@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <div class="form-group">
                @Html.ValidationMessage("Error", new { @style = "color: #f00" })
            </div>

            <div class="form-group text-right">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Employee" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>
